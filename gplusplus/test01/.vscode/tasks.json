{
    // tasks数组，包含所有任务配置
    "tasks": [
        {
            // 任务类型，这里是C/C++编译任务
            "type": "cppbuild",

            // 任务的标签名称，显示在VS Code任务列表中
            "label": "C/C++: g++.exe build active file",

            // 编译器命令，这里指定了g++的路径
            "command": "D:\\tools\\mingw64\\bin\\g++.exe",

            // 编译参数数组
            "args": [
                // 让诊断信息带颜色
                "-fdiagnostics-color=always",
                // 生成调试信息
                "-g",
                // 当前激活文件（正在编辑的文件）
                "${file}",
                // 指定输出文件
                "-o",
                // 输出文件路径和名称（与源文件同目录，扩展名为.exe）
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],

            // 任务运行时的工作目录，这里是源文件所在目录
            "options": {
                "cwd": "${fileDirname}"
            },

            // 用于识别编译错误和警告的匹配器，这里用gcc的标准格式
            "problemMatcher": [
                "$gcc"
            ],

            // 任务分组信息
            "group": {
                // 任务类型，这里是构建任务
                "kind": "build",
                // 是否为默认构建任务
                "isDefault": true
            },

            // 任务的详细描述
            "detail": "Task generated by Debugger."
        }
    ],

    // 任务配置文件的版本号
    "version": "2.0.0"
}